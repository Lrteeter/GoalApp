<h2>All Public Goals</h2>
  <ul>
    <% Goal.all.each do |goal| %>
      <% if !!goal.public || goal.user_id == current_user.id %>
        <li><%= link_to goal.title, goal_url(goal) %>,
            <%= goal.user.username %></li>
      <% end %>
    <% end %>
  </ul>

  <%= link_to "Create New Goal", new_goal_url %>
